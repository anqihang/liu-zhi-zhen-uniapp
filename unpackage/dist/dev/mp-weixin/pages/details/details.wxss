.custom-class {
  padding: 0 !important;
}
.van-nav-bar {
  padding: 0 !important;
}
.rightIcon {
  height: 100%;
  width: 40rpx;
}
.rightIcon image {
  width: 100%;
  height: 100%;
}
.screen {
  box-sizing: border-box;
  height: 100%;
  margin: 25rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.screen .title {
  display: flex;
  flex-direction: column;
  margin: 40rpx 40rpx 0;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
.screen .title .f {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.screen .title .f .name {
  font-size: 25rpx;
}
.screen .title .f .change {
  color: #0081fd;
}
.screen .title .s {
  display: flex;
  margin-top: 3rpx;
}
.screen .title .s view {
  padding: 2rpx 6rpx;
  background-color: #e6e6e6;
  margin-right: 6rpx;
}
.screen .title .t {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}
.screen .title .t view {
  color: #c1c1c1;
}
.screen .title .t view:nth-child(even) {
  width: 0;
  height: 10rpx;
  border-right: 1px solid gray;
  margin: 0 7rpx;
}
.screen .scroll {
  flex: 1;
  margin: 17rpx 40rpx;
  overflow: hidden;
}
.screen .scroll .scroll-y {
  height: 700rpx;
  overflow: hidden;
}
.screen .scroll .scroll-y .piece {
  height: 80rpx;
  background-color: #f7f7f7;
  border-radius: 7rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8rpx;
  margin-bottom: 10rpx;
}
.screen .scroll .scroll-y .piece .date {
  display: flex;
}
.screen .scroll .scroll-y .piece .date .f {
  margin-right: 5rpx;
}
.screen .scroll .scroll-y .piece .temperature .tem {
  font-size: 40rpx;
}

