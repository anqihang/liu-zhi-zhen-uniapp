.title {
  position: relative;
  height: 41rpx;
  width: 100%;
  background-color: #c2c2c2;
  text-align: center;
  line-height: 41rpx;
  font-size: 17rpx;
}
.title .icon {
  width: 35px;
  float: left;
  height: 100%;
}
.title .icon image {
  width: 100%;
  height: 100%;
}
.refresh {
  position: relative;
  height: 100%;
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.refresh .icon {
  width: 100rpx;
  height: 100rpx;
}
.refresh .icon image {
  width: 100%;
  height: 100%;
}
.refresh .text {
  margin-top: 15rpx;
  letter-spacing: 2rpx;
  color: #7f7f7f;
}
.refresh .button {
  margin-top: 30rpx;
}

